<Window x:Class="BoundlessProxyUi.ProxyManager.ProxyManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoundlessProxyUi.ProxyManager"
        mc:Ignorable="d"
        Title="Boundless Proxy Manager" Height="600" Width="400" Loaded="Window_Loaded" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Name="stackMain" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15"/>
        <Separator VerticalAlignment="Bottom"/>
        <Canvas Name="canvasMain" Grid.Row="1" >
            <StatusBar Height="21" Canvas.Top="525" Width="394"/>
        </Canvas>

    </Grid>
</Window>
