<Window x:Class="BoundlessProxyUi.HostsFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoundlessProxyUi"
        mc:Ignorable="d"
        Title="Modify Hosts File" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Margin="5">Add the following to your hosts file and close boundless.<LineBreak />
        The usual place for the hosts file is "C:\Windows\System32\drivers\etc\hosts"</TextBlock>
        <TextBox Name="txtMain" Grid.Row="1" Margin="5" IsReadOnly="True" />
        <Button Grid.Row="2" Margin="5" Width="80" Click="Button_Click" IsDefault="True" IsCancel="True" >Yup</Button>
    </Grid>
</Window>
